@model CakesManagement.Models.Cake.DetailCake

@{
    ViewData["Title"] = "Detail";
    var category = ViewBag.Category as CakesManagement.Entities.Category;
}

<h1>@category.CategoryName &gt; Detail</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CakeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CakeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CakeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CakeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpiredDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpiredDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManufactureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManufactureDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success text-white" asp-controller="Cakes" asp-action="Edit" asp-route-cakeId="@Model.CakeId">
        Edit
    </a>
    <a class="btn btn-danger text-white" asp-controller="Cakes" asp-action="Remove" asp-route-cakeId="@Model.CakeId">
        <i class="fa fa-trash"> Remove</i>
    </a>
    <a class="btn btn-outline-secondary" asp-controller="Cakes" asp-action="Index" asp-route-catId="@category.CategoryId">
        <i class="fa fa-backward"> Back to List</i>
    </a>
</div>
